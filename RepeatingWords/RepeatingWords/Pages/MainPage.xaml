<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RepeatingWords.MainPage"
              xmlns:local="clr-namespace:RepeatingWords;assembly=RepeatingWords"
          Style="{DynamicResource TitleApp}"
            >

    <!--панель управлления-->
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Tools" Icon="toolbarImageTools.png" Clicked="ClickedToolsButton"></ToolbarItem>
        <ToolbarItem Name="Like" Icon="toolbarImageLike.png" Clicked="ClickedLikeButton"></ToolbarItem>
        <ToolbarItem Name="Help" Icon="toolbarImageHelp.png" Clicked="ClickedHelpButton"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <StackLayout HorizontalOptions="Center" Orientation="Vertical">
        <local:AdMobView WidthRequest="320" HeightRequest="50"/>
        <Label Text="{local:Translate HeaderMain}" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center" Style="{DynamicResource LableHeadApp}">
          <Label.FontSize>
          <OnPlatform x:TypeArguments="x:Double">
            <OnPlatform.Android>21</OnPlatform.Android>
            <OnPlatform.WinPhone>16</OnPlatform.WinPhone>
          </OnPlatform>
          </Label.FontSize>
        </Label>

        <Button Style="{StaticResource buttonStyle}" VerticalOptions="Center" Text="{local:Translate ButtonAddDictionaryOrWords}" Clicked="ChooseDbButtonClick"/>
        <Button Style="{StaticResource buttonStyle}" VerticalOptions="Center" Text="{local:Translate ChooseDictionaryForRepeat}" Clicked="ChooseDictionaryButtonClick"/>
        <Button Style="{StaticResource buttonStyle}" VerticalOptions="Center" Text="{local:Translate Continue}" Clicked="ReturnButtonClick"/>

    </StackLayout>
   

</ContentPage>