<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:locale ="clr-namespace:RepeatingWords;assembly=RepeatingWords"
             x:Class="RepeatingWords.View.FinishLearnView"
             xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
             Style="{StaticResource TitleApp}"
>
    <RelativeLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <Image Source="background.png"  HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand"
               Aspect="Fill"
               RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, ElementName=SearchControlsGrid,Property=Width, Factor=1, Constant=0 }"
               RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, ElementName=SearchControlsGrid, Property=Height,Factor=1, Constant=0}" 
               />

        <StackLayout x:Name="stCongratulation" Orientation="Vertical" HorizontalOptions="Center" VerticalOptions="FillAndExpand"
                     RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, ElementName=SearchControlsGrid,Property=Width, Factor=1, Constant=0 }"
                     RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, ElementName=SearchControlsGrid, Property=Height,Factor=1, Constant=0}" 
                     Opacity="0"
                    >
            <Label FontSize="35" HorizontalTextAlignment="Center" Text="{locale:Translate LbCongratulations}" TextColor="White" FontAttributes="Bold" />
            <Label FontAttributes="Bold" FontSize="26" HorizontalTextAlignment="Center" Text="{locale:Translate LbFinishStudied}" TextColor="White"  Margin="2"/>

            <StackLayout Orientation="Vertical" Margin="30,0,0,0" VerticalOptions="CenterAndExpand" >
                <Label x:Name="lbLearned"  
                       Opacity="0"
                       Text="{Binding LearnedWordsCount}"
                       FontSize="Medium" 
                       TextColor="White"/>
                <Label x:Name="lbUnlearned" 
                       Opacity="0"
                       Text="{Binding UnlearnedWordsCount}"
                       FontSize="Medium"
                       TextColor="White"/>

            </StackLayout>
            <StackLayout x:Name="stLearnMore"  Orientation="Vertical" VerticalOptions="End" Opacity="0">
                <Label FontSize="Small" Text="{locale:Translate LbAdvertizing}" HorizontalTextAlignment="Center"/>
                <Button 
                    BackgroundColor="{StaticResource ColorCustomBackgrountButton}" 
                    TextColor="White" 
                    Text="{locale:Translate BtnLearnMore}" 
                    FontSize="20"
                    Command="{Binding GoMainPageCommand}"
                    HeightRequest="100"
                    android:Button.UseDefaultPadding="true"
                    android:Button.UseDefaultShadow="true"
                />
            </StackLayout>
        </StackLayout>
    </RelativeLayout>
</ContentPage>