<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RepeatingWords.View.AboutView"
              xmlns:locale ="clr-namespace:RepeatingWords;assembly=RepeatingWords"
             Style="{StaticResource TitleApp}"
             Title="{locale:Translate TitleAbout}"
             >
    <!--панель управлления-->
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Home" Icon="toolbarImageHome.png" Command="{Binding GoMainPageCommand}"/>
    </ContentPage.ToolbarItems>

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Image Source="icon.jpg" />
        <Label Text="Cards of words v2.1" Style="{StaticResource LabelColorWB}" FontSize="Medium" HorizontalTextAlignment="Center"/>
        <Label Text="Copyright © 2017 devprogram." Style="{StaticResource LabelColorWB}" FontSize="Medium" HorizontalTextAlignment="Center"/>
        <Label Text="{locale:Translate LabelRights}" Style="{StaticResource LabelColorWB}" FontSize="Medium" HorizontalTextAlignment="Center"/>
        <Label Text="{locale:Translate LabelFIO}" Style="{StaticResource LabelColorWB}" FontSize="Medium" HorizontalTextAlignment="Center"/>
    </StackLayout>
 
</ContentPage>